<div class="card mb-4" style="width: 18rem;">
    <div class = "card-image card-img-top">
        <%= render "shared/carousel", photos: skate.photos, id_name: skate.id%>
    </div>
    <div class="card-body">
        <div class = "d-flex justify-content-between">
            <h5 class="card-title"><%=skate.ubicacion%></h5>
            <p class="card-text">$<%=skate.precio_dia%>/dia</p>
            <%= link_to "ver", skate_path(skate) %>
        </div>
        <div class = "d-flex justify-content-between">
            <h6 class="card-subtitle text-muted mt-1"><%=skate.descripcion%></h6>
            <div class = "d-flex justify-content-between mt-1">
                <i class="fas fa-star star-yellow"></i>
                <i class="fas fa-star star-yellow"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            </div>
        </div>
    </div>
</div>
