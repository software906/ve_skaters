<div id="carousel<%=id_name%>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel<%=id_name%>" data-slide-to="0" class="active"></li>
    <li data-target="#carousel<%=id_name%>" data-slide-to="1"></li>
    <li data-target="#carousel<%=id_name%>" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">   
    <div class="carousel-item active">
      <%= cl_image_tag photos[0].key, width: 100, height: 200, class:"d-block w-100 p-1" %>
    </div>
    <%photos[1..-1].each do |photo| %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, width: 100, height: 200, class:"d-block w-100 p-1"%>
      </div>
    <% end %>     
  </div>
  <a class="carousel-control-prev" href="#carousel<%=id_name%>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel<%=id_name%>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


