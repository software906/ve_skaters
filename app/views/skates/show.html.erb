<%= render "/shared/navbar2" %>

<div class = "container mt-5 pt-5">

  <div class="row">
    <div class="map-card card mb-3 col-6">
        <div class="card-img-top d-flex justify-content-center mt-3">
            <%= render "shared/map" %>
        </div>

        <div class="card-body">
            <h5 class="card-title" id = "ubicacion"><%=@skate.ubicacion%></h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
    </div>
    <div class="map-card card mb-3 col-6">
      <div class="card-body">
      <% if @reservado %>
        <h5 class="card-title">Tu reserva</h5>
        <p class="card-text">Detalles:
        <ul>
        <li>id= <%= @booking.id %></li>
        <li>Rendador= <%= @booking.skate.user.email %></li>
        <li>Fecha = <%= @booking.time_from %></li>
        <li>Precio= <%= @booking.skate.precio_dia %> $</li>
        <li>Ubicaci√≥n= <%= @booking.skate.ubicacion %></li>
        </ul>
        </p>
        <p><%= link_to "cancelar reserva", status_path(@booking) %></p>
        <%= link_to "borrar", skate_booking_path(@skate,@booking), method: :delete, data: {confirm: "estas seguro"} %>


      <% else  %>
        <%= simple_form_for [@skate, @booking] do |f| %>
          <%= f.input :time_from, label: "fecha de reserva"%>
          <%= f.input :descripcion, label: "nota:" %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

    <div class="skater-card card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4 p-2">
                <%= render "shared/carouselShow", photos: @skate.photos, id_name: @skate.id%>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=@skate.user.email%></h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>

     <%= render "shared/reviews", skate: @skate, reservado: @review_act %>
</div>
