<div class="d-flex justify-content-between align-items-center">
  <h1> Skates </h1>
  <% if user_signed_in? %>
  <div class="btn-group">
    <button type="button" class="btn btn-sm btn-outline-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
      <%= link_to "+ Crear nueva skate", new_skate_path %></font></font>
    </button>
  </div>
  <% end  %>
</div>

<div class="container">
  <div class="row">
    <% @skates.each do |skate| %>
      <div class="col-6">
        <div class="card mb-4 mt-4">
          <%= cl_image_tag skate.photo.key, height: 200, crop: :fill %>
          <div class="card-body">
            <h2 class="card-title"><%= link_to skate.id, skate_path(skate), class: "text-white" %></h2>
            <h2 class="card-title"><%= skate.descripcion %></h2>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Reservar</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= skate.ubicacion%></button>
                </div>
                <small class="text-muted">Precio: <%= skate.precio_dia %> $</small>
              </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
