<%= render "/shared/navbar2" %>

<div class="d-flex justify-content-between align-items-center mt-5 pt-5">
  <% if user_signed_in? %>
  <div class="btn-group">
    <button type="button" class="btn btn-sm btn-outline-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
      <%= link_to "+ Crear nueva skate", new_skate_path %></font></font>
    </button>
  </div>
  <% end  %>
</div>

<div class = "cards-container m-5 p-5">
    <div class = "filter mb-5">
        <h5 class = "mr-2"> Ordenar por: </h5>
        <%= render "shared/dropdown"%>
    </div>
    <div class = "cards d-flex flex-wrap justify-content-between">
        <% @skates.each do |skate| %> 
          <%= link_to skate_path(skate), class:'text-decoration-none' do %>       
            <%= render "shared/card", skate: skate%>
          <% end %>   
        <% end %>             
    </div>    
</div>

